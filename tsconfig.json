{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build/",
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "pretty": true,
    "strictNullChecks": true
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}